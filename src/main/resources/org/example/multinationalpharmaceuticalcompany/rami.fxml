<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="class_controller.Ahnaf_2320401.Admin.AdminDashboardController">
    <children>
        <!-- Header -->
        <Label layoutX="300.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Admin User Management Dashboard" />

        <!-- Navigation/Dashboard Sections (Event 2) -->
        <Button layoutX="40.0" layoutY="60.0" onAction="#openUserManagementONA" prefWidth="180.0" text="User Management" />
        <Button layoutX="240.0" layoutY="60.0" onAction="#openPendingApprovalsONA" prefWidth="180.0" text="Pending Approvals" />
        <Button layoutX="440.0" layoutY="60.0" onAction="#openInactiveAccountsONA" prefWidth="180.0" text="Inactive Accounts" />

        <!-- User Table View (Event 2) -->
        <Label layoutX="40.0" layoutY="110.0" text="Active System Users" style="-fx-font-weight: bold;" />
        <TableView fx:id="userTableView" layoutX="40.0" layoutY="135.0" prefHeight="220.0" prefWidth="720.0">
            <columns>
                <TableColumn fx:id="userIdTableColumn" prefWidth="120.0" text="User ID" />
                <TableColumn fx:id="userNameTableColumn" prefWidth="180.0" text="Name" />
                <TableColumn fx:id="deptTableColumn" prefWidth="120.0" text="Department" />
                <TableColumn fx:id="roleTableColumn" prefWidth="120.0" text="Current Role" />
                <TableColumn fx:id="accessLevelTableColumn" prefWidth="180.0" text="Access Level" />
            </columns>
            <!-- Assuming a selection handler to populate the detail form -->
        </TableView>

        <!-- User Profile Detail/Actions (Event 3) -->
        <Label layoutX="40.0" layoutY="380.0" text="Selected User Profile Details" style="-fx-font-weight: bold;" />
        <AnchorPane layoutX="40.0" layoutY="410.0" prefHeight="200.0" prefWidth="720.0">

            <!-- Information Fields (Event 3) -->
            <Label layoutX="20.0" layoutY="20.0" text="Name:" />
            <TextField fx:id="nameTextField" layoutX="140.0" layoutY="15.0" prefWidth="200.0" promptText="Full Name" />

            <Label layoutX="370.0" layoutY="20.0" text="Department:" />
            <TextField fx:id="deptTextField" layoutX="500.0" layoutY="15.0" prefWidth="200.0" promptText="Department" />

            <Label layoutX="20.0" layoutY="60.0" text="Role:" />
            <ComboBox fx:id="roleComboBox" layoutX="140.0" layoutY="55.0" prefWidth="200.0" promptText="Current Role" />

            <Label layoutX="370.0" layoutY="60.0" text="Access Level:" />
            <ComboBox fx:id="accessComboBox" layoutX="500.0" layoutY="55.0" prefWidth="200.0" promptText="Access Level" />

            <!-- Action Buttons (Event 3 & 4) -->
            <Button layoutX="140.0" layoutY="120.0" onAction="#updateUserONA" prefWidth="120.0" text="Update Info" />
            <Button layoutX="280.0" layoutY="120.0" onAction="#addRoleONA" prefWidth="120.0" text="Add New Role" />
            <!-- Removed custom styling for basic look -->
            <Button layoutX="420.0" layoutY="120.0" onAction="#deactivateAccountONA" prefWidth="150.0" text="Deactivate Account" />
            <Button layoutX="580.0" layoutY="120.0" onAction="#deleteAccountONA" prefWidth="120.0" text="Delete Account" />

        </AnchorPane>

        <!-- Status/Log Message (Event 4) -->
        <Label fx:id="statusLabel" layoutX="40.0" layoutY="620.0" prefHeight="20.0" prefWidth="720.0" text="System status: Ready for action." />

    </children>
</AnchorPane>