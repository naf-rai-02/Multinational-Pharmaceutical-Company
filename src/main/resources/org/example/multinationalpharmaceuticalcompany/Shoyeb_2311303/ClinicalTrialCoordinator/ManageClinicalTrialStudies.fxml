<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Shoyeb_2311303.ClinicalTrialCoordinator.ManageClinicalTrialStudiesController">

    <!-- Header -->
    <Label layoutX="20.0" layoutY="10.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Clinical Trial Management System" />

    <!-- Trial Dashboard Tabs -->
    <TabPane layoutX="20.0" layoutY="50.0" prefHeight="300.0" prefWidth="760.0">
        <tabs>
            <Tab text="Planned Studies">
                <AnchorPane>
                    <TableView fx:id="plannedTrialsTable" layoutX="10.0" layoutY="10.0" prefHeight="250.0" prefWidth="730.0">
                        <columns>
                            <TableColumn fx:id="protocolColumn" text="Protocol ID" />
                            <TableColumn fx:id="phaseColumn" text="Phase" />
                            <TableColumn fx:id="siteColumn" prefWidth="85.0" text="Site Locations" />
                            <TableColumn fx:id="statusColumn" prefWidth="75.0" text="Status" />
                        </columns>
                    </TableView>
                </AnchorPane>
            </Tab>
            <Tab text="Active Studies">
                <AnchorPane>
                    <TableView fx:id="activeTrialsTable" layoutX="10.0" layoutY="10.0" prefHeight="250.0" prefWidth="730.0">
                        <columns>
                            <TableColumn fx:id="activeProtocolColumn" text="Protocol ID" />
                            <TableColumn fx:id="activePhaseColumn" text="Phase" />
                            <TableColumn fx:id="activeSiteColumn" text="Site Locations" />
                            <TableColumn fx:id="activeStatusColumn" text="Status" />
                        </columns>
                    </TableView>
                </AnchorPane>
            </Tab>
            <Tab text="Completed Studies">
                <AnchorPane>
                    <TableView fx:id="completedTrialsTable" layoutX="10.0" layoutY="10.0" prefHeight="250.0" prefWidth="730.0">
                        <columns>
                            <TableColumn fx:id="completedProtocolColumn" text="Protocol ID" />
                            <TableColumn fx:id="completedPhaseColumn" text="Phase" />
                            <TableColumn fx:id="completedSiteColumn" text="Site Locations" />
                            <TableColumn fx:id="completedStatusColumn" text="Status" />
                        </columns>
                    </TableView>
                </AnchorPane>
            </Tab>
        </tabs>
    </TabPane>

    <!-- Add / Update Trial Info -->
    <VBox layoutX="20.0" layoutY="370.0" spacing="10">
        <HBox spacing="10">
            <Label text="Protocol ID:" />
            <TextField fx:id="protocolField" prefWidth="150" />
            <Label text="Phase:" />
            <TextField fx:id="phaseField" prefWidth="100" />
            <Label text="Site Locations:" />
            <TextField fx:id="siteField" prefWidth="200" />
        </HBox>

        <Button fx:id="saveBtn" prefWidth="120" text="Save Changes" />
    </VBox>

    <!-- Notifications -->
    <TextArea fx:id="notificationArea" editable="false" layoutX="20.0" layoutY="450.0" prefHeight="50.0" prefWidth="760.0" promptText="System notifications will appear here..." />
</AnchorPane>
